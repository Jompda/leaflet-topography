{
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "node",
		"lib": ["es2015", "dom"],
		"target": "es5",
		"allowJs": true,
		"noImplicitAny": false,
		"removeComments": true,
		"sourceMap": true,
		"noEmit": false,
		"outDir": "build",
		"esModuleInterop": true,
		"declaration": true,
		"emitDeclarationOnly": true
	},
	"include": ["./src"],
	"exclude": ["**/*.test.ts"]
}
